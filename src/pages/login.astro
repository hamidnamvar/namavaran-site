---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout 
  title="Login - Payflo Payroll Infrastructure"
  description="Log in to your Payflo account to manage your payroll infrastructure."
>
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-payflo-gray/50 to-white">
    <div class="max-w-md w-full">
      <!-- Logo -->
      <div class="flex justify-center mb-8">
        <a href="/" class="flex items-center space-x-2">
          <img src="/src/assets/logo.svg" alt="Payflo" class="h-8 w-auto" />
        </a>
      </div>
      
      <!-- Login Form -->
      <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold">Welcome back</h1>
          <p class="text-gray-600 mt-2">Log in to your Payflo account</p>
        </div>

        <form class="space-y-6" action="#" method="POST">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">
              Email address
            </label>
            <div class="mt-1">
              <input
                id="email"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="appearance-none block w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-rich-green/20 focus:border-rich-green"
                placeholder="you@company.com"
              />
            </div>
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">
              Password
            </label>
            <div class="mt-1">
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="current-password"
                required
                class="appearance-none block w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-rich-green/20 focus:border-rich-green"
                placeholder="••••••••"
              />
            </div>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input
                id="remember-me"
                name="remember-me"
                type="checkbox"
                class="h-4 w-4 text-rich-green focus:ring-rich-green/20 border-gray-300 rounded"
              />
              <label for="remember-me" class="ml-2 block text-sm text-gray-700">
                Remember me
              </label>
            </div>

            <a href="#" class="text-sm font-medium text-rich-green hover:text-rich-green/80">
              Forgot your password?
            </a>
          </div>

          <button
            type="submit"
            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-rich-green hover:bg-rich-green/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rich-green/20"
          >
            Sign in
          </button>
        </form>

        <div class="mt-6">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500">Or continue with</span>
            </div>
          </div>

          <div class="mt-6 grid grid-cols-2 gap-4">
            <a
              href="#"
              class="flex items-center justify-center px-4 py-2.5 border border-gray-200 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rich-green/20"
            >
              <Icon name="ph:github-logo-duotone" class="h-5 w-5 mr-2" />
              GitHub
            </a>

            <a
              href="#"
              class="flex items-center justify-center px-4 py-2.5 border border-gray-200 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rich-green/20"
            >
              <Icon name="ph:google-logo-duotone" class="h-5 w-5 mr-2" />
              Google
            </a>
          </div>
        </div>
      </div>

      <!-- Sign up link -->
      <p class="mt-8 text-center text-sm text-gray-600">
        Don't have an account?
        <a href="/book-demo" class="font-medium text-rich-green hover:text-rich-green/80">
          Book a demo
        </a>
      </p>
    </div>
  </div>
</Layout>

<style>
  /* Custom checkbox styles */
  input[type="checkbox"] {
    @apply rounded border-gray-300 text-rich-green focus:ring-rich-green/20;
  }
</style>
